class Solution {
    public int searchInsert(int[] nums, int target) {
        //two pointers L and R
        int L = 0;
        int R = nums.length - 1;
        //before they meet
        while (L <= R) {
            //middle number
            int M = (L + R) / 2;
            if (target == nums[M]) {
                return M;
            } else if (target < nums[M]) {
                R = M - 1;
            } else {
                L = M + 1;
            }
        }
        return L;
    }
}
