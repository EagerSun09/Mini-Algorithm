/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    
    public TreeNode bstFromPreorder(int[] preorder) {
        //from start to the last number that is less than pre[start] belongs to the left child of root
        return helper(preorder, 0, preorder.length-1);
    }
    
    public TreeNode helper(int[] pre, int start, int end){
        if(start > end){
            return null;
        }
        TreeNode root = new TreeNode(pre[start]);
        int tail = start+1;
        for(; tail<=end; tail++){
            if(pre[tail]>pre[start]){
                break;
            }
        }
        root.left = helper(pre, start+1, tail-1);
        root.right = helper(pre, tail, end);
        return root;
    }
}
