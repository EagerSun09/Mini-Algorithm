class Solution {
    public boolean canConstruct(String ransomNote, String magazine) {
        char[] note = ransomNote.toCharArray();
        char[] maga = magazine.toCharArray();
        
        int[] ans = new int[26];
        //using concept of backet sort, get occurence of each char
        for(char c:maga){
            ans[c-'a']++;
        }
        //check if we can build note from maga by checking its occurence
        for(char c:note){
            if(ans[c-'a']<1){
                return false;
            }else{
                ans[c-'a']--;
            }
        }
        
        return true;
    }
}
